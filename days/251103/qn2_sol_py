integers_seq = input('Integers (separated by space):')
print(integers_seq)
integers = integers_seq.split()
print(integers, type(integers))
sum = 0
for i in integers:
    sum = sum+int(i)
print(sum)
average = sum/len(integers)
print(average)
with open('qn02_data.txt', 'w') as output_file:
    output_file.write(f'list:{integers}\n')
    output_file.write(f'sum:{integers}\n')
    output_file.write(f'average:{integers}\n')

# output_file.close()
with open('qn02_data.txt', 'r') as input_file:
    file_integers_list_line = input_file.readline()
    file_integers_sum_line = input_file.readline()
    file_integers_average_line = input_file.readline()

    print(file_integers_list_line)
    print(file_integers_sum_line)
    print(file_integers_average_line)
